{% extends 'base.html.twig' %}

{% block title %}
    Hello OrderController!
            
        
    
{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <table>
            <tr>
                <th>
                    id
                                                                            
                                                        
                                    
                </th>
                <th>
                    Item
                                                                            
                                                        
                                    
                </th>
                <th>
                    Quantity
                                                                            
                                                        
                                    
                </th>
                <th>
                    Email
                                                                            
                                                        
                                    
                </th>
            </tr>
            {% for order_get in order_result %}
                <tr>
                    <td>
                        {{ order_get.id }}
                    </td>
                    <td>
                        {{ order_get.product.name }}
                    </td>
                    <td>
                        {{ order_get.quantity }}
                    </td>
                    <td>
                        {{ order_get.orderId.customer.email }}
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
