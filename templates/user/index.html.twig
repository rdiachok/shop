{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>User Page!</h1>
        <h3>{{ form }}</h3>
        <ul>
            <li><a href="{{ path('user_email_search') }}">Find user by Email</a></li>
            <li><a href="{{ path('user_update') }}">Update info about user</a></li>
            <li><a href="{{ path('user_add') }}">Add new user</a></li>
            <li><a href="{{ path('user_delete') }}">Delete user</a></li>
        </ul>

        <h3>All users:</h3>
        <table>
            <tr>
                <th>first name</th>
                <th>last name</th>
                <th>email</th>
                <th>role</th>
            </tr>
            {% for user_all in user_result %}
                <tr>
                    <td>{{ user_all.firstName }}</td>
                    <td>{{ user_all.lastName }}</td>
                    <td>{{ user_all.email }}</td>
                    <td>{{ user_all.roles.0 }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
