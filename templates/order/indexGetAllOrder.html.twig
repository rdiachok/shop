{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Order Page!</h1>
        <a href="{{ path('order') }}"> beck to Main User Page </a>
        <h3>All orders:</h3>
        <table>
            <tr>
                <th>soller</th>
                <th>is Paid</th>
                <th>date Solled
                    <a href="{{ path('order_sold_date_sort_up') }}"> ↑ </a>
                    <a href="{{ path('order_sold_date_sort_down') }}"> ↓ </a>
                </th>
            </tr>
            {% for user_all in order_result %}
                <tr>
                    <td>{{ user_all.soller }}</td>
                    <td>{{ user_all.isPaid }}</td>
                    <td>{{ user_all.dateSolled |date('d-m-Y') }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
